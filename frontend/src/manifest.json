{
  "name": "Curio",
  "description": "Webpage Aware Generative AI",
  "version": "0.1",
  "manifest_version": 3,

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "images/temp-logo.png"
  },

  "permissions": [ "tabs", "scripting" ],

  "background": {
    "service_worker": "scripts/background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/highlighter/highlighter.js"],
      "css": ["scripts/highlighter/highlighter.css"]
    }
  ],

  "commands": {
    "toggle_element_selection_state": {
      "suggested_key": { 
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Enable/Disable Element Selection State"
    }
  }
}